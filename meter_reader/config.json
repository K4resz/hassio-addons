{
    "name": "Meter reader",
    "version": "0.2.3",
    "slug": "meterreader",
    "homeassistant_api": "no",
    "description": "Put a webcam in front of your utility meter and classify the image with an online OCR api push the reading over mqtt",
    "url": "https://github.com/K4resz",
    "startup": "application",
    "boot": "auto",
    "arch": ["aarch64", "amd64", "armv7", "i386"],
    "options": { "upd_interval": 1800, "image_path": "/config/www/snapshots/meter.jpg", "baseline": 1, "under": 1, "over": 1, "ocr_api_key": null, "region": null, "mqtt_host": "127.0.0.1", "mqtt_port": 1883, "mqtt_user": "mqtt", "mqtt_pwd": "mqtt_pwd", "mqtt_topic": "home/meter" },
    "schema": { "upd_interval": "int", "image_path": "str", "baseline": "int", "under": "int", "over": "int", "ocr_api_key": "str", "region": "str", "mqtt_host": "str", "mqtt_port": "int", "mqtt_user": "str", "mqtt_pwd": "str", "mqtt_topic": "str" },
    "map": ["config:rw"]
}
