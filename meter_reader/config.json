{
    "name": "Meter reader",
    "version": "0.6.2_b2",
    "slug": "meterreader",
    "homeassistant_api": "no",
    "description": "Classify utility meter image with OpenCV and Tesseract OCR and push the reading over mqtt",
    "url": "https://github.com/K4resz/hassio-addons/tree/master/meter_reader",
    "startup": "application",
    "services": [
        "mqtt:need"
    ],
    "boot": "auto",
    "arch": [
        "aarch64", 
        "amd64", 
        "armhf", 
        "armv7", 
        "i386"
    ],
    "options": {
        "upd_interval": 600, 
        "folder_path": "/config/www/meterreader", 
        "image_title": "meter_latest.jpg", 
        "initial": null, 
        "max_increase": 100, 
        "max_decrease": 0,
        "blur_ksize": 3,
        "img_inverse": true,
        "crop_start_row": null,
        "crop_end_row": null,
        "crop_start_col": null,
        "crop_end_col": null,
        "mqtt_host": "192.168.x.x", 
        "mqtt_port": 1883, 
        "mqtt_user": null, 
        "mqtt_pwd": null, 
        "mqtt_topic": "home/meter" 
    },
    "schema": { 
        "upd_interval": "int", 
        "folder_path": "str", 
        "image_title": "str", 
        "initial": "int", 
        "max_increase": "int", 
        "max_decrease": "int",
        "blur_ksize": "int(3,)",
        "img_inverse": "bool",
        "crop_start_row": "int(0,)?",
        "crop_end_row": "int(0,)?",
        "crop_start_col": "int(0,)?",
        "crop_end_col": "int(0,)?",
        "mqtt_host": "str", 
        "mqtt_port": "int", 
        "mqtt_user": "str", 
        "mqtt_pwd": "password", 
        "mqtt_topic": "str"
    },
    "map": [
        "config:rw",
        "media:rw",
        "share:rw"
    ]
}
