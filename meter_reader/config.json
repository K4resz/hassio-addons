{
    "name": "Meter reader",
    "version": "0.2.4.b12",
    "slug": "meterreader",
    "homeassistant_api": "no",
    "description": "Put a webcam in front of your utility meter and classify the image with an online OCR api and push the reading over mqtt",
    "url": "https://github.com/K4resz",
    "startup": "application",
    "boot": "auto",
    "arch": [
        "aarch64", 
        "amd64", 
        "armv7", 
        "i386"
    ],
    "options": { 
        "upd_interval": 1800, 
        "image_path": "/config/www/snapshots/meter.jpg", 
        "initial": 1, 
        "under": 0, 
        "over": 1, 
        "ocr_api_key": null, 
        "mqtt_host": "192.168.x.x", 
        "mqtt_port": 1883, 
        "mqtt_user": null, 
        "mqtt_pwd": null, 
        "mqtt_topic": "home/meter" 
    },
    "schema": { 
        "upd_interval": "int", 
        "image_path": "str", 
        "initial": "int", 
        "under": "int", 
        "over": "int", 
        "ocr_api_key": "str", 
        "mqtt_host": "str", 
        "mqtt_port": "int", 
        "mqtt_user": "str", 
        "mqtt_pwd": "str", 
        "mqtt_topic": "str"
    },
    "map": [
        "config:rw"
    ]
}
